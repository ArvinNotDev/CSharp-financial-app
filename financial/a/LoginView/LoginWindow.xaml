<Window x:Class="financial.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="400" WindowStartupLocation="CenterScreen" Background="White" FontFamily="Segoe UI">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >

            <TextBlock Text="Login" FontSize="32" FontWeight="Bold" Foreground="#222" 
                       HorizontalAlignment="Center" Margin="0,0,0,40"/>

            <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,6"/>
            <TextBox Height="36" FontSize="14" Padding="6" />

            <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,6"/>
            <PasswordBox Height="36" FontSize="14" Padding="6" />

            <Button Content="Login" Height="40" Margin="0,30,0,0" Background="#0078D7" Foreground="White" FontWeight="SemiBold" Cursor="Hand"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0" FontSize="14">
            <Run Text="Don't have an account? "/>
            <Hyperlink Click="CreateAccountLink_Click" Cursor="Hand" Foreground="#0078D7" TextDecorations="Underline">
                Create one
            </Hyperlink>
            </TextBlock>

        </StackPanel>
    </Grid>
</Window>
